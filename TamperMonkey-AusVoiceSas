// ==UserScript==
// @name         Australian Voice Override
// @namespace    http://tampermonkey.net/
// @version      1.0
// @description  Use Natural Australian voice
// @author       You
// @match        https://*
// @match        http://*
// @grant        none
// @run-at       document-start
// ==/UserScript==

(function() {
    'use strict';

    const originalSpeak = speechSynthesis.speak;
    speechSynthesis.speak = function(utterance) {
        const voices = speechSynthesis.getVoices();

        // Use  Natural Australian voice
        const selectedVoice = voices.find(v =>
            v.name === "Microsoft WilliamMultilingual Online (Natural) - English (Australia)"
        );

        if (selectedVoice) {
            utterance.voice = selectedVoice;
        }

        return originalSpeak.call(this, utterance);
    };
})();
